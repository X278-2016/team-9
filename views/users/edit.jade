extends ../layout

block content
	h1.
		Blob ID #{user._id}
	form(action='/users/#{user._id}/edit',method='post',name='updateuser',enctype='application/x-www-form-urlencoded')
		p lgnName:
			input#inputName(type='text', value='#{user.lgnName}', name='lgnName')
		p password:
			input#inputBadge(type='text', value='#{user.password}', name='password')
		p userName:
			input#inputBadge(type='text', value='#{user.userName}', name='userName')
		p race:
			input#inputBadge(type='text', value='#{user.race}', name='race')
		p income:
			input#inputBadge(type='number', value='#{user.income}', name='income')
		p age:
			input#inputDob(type='date', value='#{userdob}', name='age')
		p email:
			input#inputBadge(type='text', value='#{user.email}', name='email')
		p phone:
			input#inputBadge(type='number', value='#{user.phone}', name='phone')
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update