doctype html
html(lang="en")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title!= title
        script(src="/js/jquery-2.1.4.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    body
        div(class="container")
            div(class="row bg-primary")
                div(class="col-sm-offset-2 col-sm-8 text-center")
                    h1!= "Legal Aid"
                    h5!= "of Middle Tennessee and Cumberlands"
                    br

            div(class="col-sm-1")
                div(class="row")
                    br
                    h4!= "Links:"
                div(class = "row")
                    a(href = "http://www.las.org/about_new/", role="button", class="center-block")!= "About Us"
                div(class = "row")
                    a(href = "register.html", role="button")!= "Register"
                div(class = "row")
                    a(href = "login.html", role="button")!= "Login"

            div(class="col-sm-offset-1 col-sm-8")
                h3!= question.heading
                hr

                each thing in question.body
                    p!= thing

                div
                    br
                    each button in question.buttons
                        - var url = "question?id=" + button.child_id
                        - var name = button.name
                        a(href = url, role = "button", class = "btn btn-default btn-lg btn-block")!= name

